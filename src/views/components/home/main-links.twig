<section class="my-10 custom-slider-section">
	<h1 class="text-center custom-slider-title">{{ component.title }}</h1>
	<div class="continer p-10">
		<div slot="items" class="custom-slider-container">
			{% if component.show_cats %}
				{% for cat in component.categories %}
					<div class="custom-slider-slide">
						<a href="{{ cat.url }}" class="custom-slide-cat-entry">
							<div class="custom-link-image-container">
								<i class="{{ cat.icon }}"></i>
							</div>
							<h2>{{ cat.name }}</h2>
						</a>
					</div>
				{% endfor %}
			{% else %}
				{% for link in component.links %}
					{% if link.title %}
						<div class="custom-slider-slide">
							<a href="{{ link.url }}" class="custom-slide-cat-entry">
								<div class="custom-link-image-container">
									<img src="{{ link.link_img_before }}" class="custom-link-img-before"/>
									<img src="{{ link.link_img_after }}" class="custom-link-img-after"/>
								</div>
								<h2>{{ link.title }}</h2>
							</a>
						</div>
					{% endif %}
				{% endfor %}
			{% endif %}
		</div>
	</div>
</section>
