<section class="my-10 custom-slider-section text-center">
	<h1 class="text-3xl font-bold mb-6">{{ component.title }}</h1>
	<div class="container mx-auto p-10 flex justify-center">
		<div class="custom-slider-container flex flex-wrap justify-center">
			{% if component.show_cats %}
				{% for cat in component.categories %}
					<div class="custom-slider-slide p-4">
						<a href="{{ cat.url }}" class="custom-slide-cat-entry block text-center">
							<div class="custom-link-image-container mb-2">
								<i class="{{ cat.icon }} text-5xl"></i>
							</div>
							<h2 class="text-xl font-semibold">{{ cat.name }}</h2>
						</a>
					</div>
				{% endfor %}
			{% else %}
				{% for link in component.links %}
					{% if link.title %}
						<div class="custom-slider-slide p-4">
							<a href="{{ link.url }}" class="custom-slide-cat-entry block text-center">
								<div class="custom-link-image-container mb-2">
									<i class="{{ link.icon }} text-5xl"></i>
								</div>
								<h2 class="text-xl font-semibold">{{ link.title }}</h2>
							</a>
						</div>
					{% endif %}
				{% endfor %}
			{% endif %}
		</div>
	</div>
</section>
