{#
| Variable          | Type   | Description                                                      |
|-------------------|--------|------------------------------------------------------------------|
| title             | string | Section title                                                    |
| items[]           | array  | List of images                                                   |
| items[].url       | string | Link URL for the banner                                          |
| items[].link_type | string | Link type: category, product, offers, page, external_link, brand |
| items[].image.url | string | URL of the image                                                 |
| items[].image.alt | string | Alt text for the image                                           |
| items[].text      | string | Text overlay for the image                                       |
| position          | Int    | Sorting number (starts from zero)                                |
#}

<section
	class="s-block s-block--banners container">
	<!-- Title Section -->
	{% if title %}
		<div class="s-block__title">
			<div class="right-side">
				<h2>{{ title }}</h2>
			</div>
		</div>
	{% endif %}

	<!-- Grid of Banners -->
	<div class="grid {{ items|length <= 3 ? 'one-row md:grid-cols-' ~ items|length : 'md:grid-cols-3 two-row' }} grid-flow-row gap-3 sm:gap-8">
		{% for item in items %}
			<!-- Banner Entry -->
			<a
				class="banner-entry square-photos {{ item.text ? 'has-overlay with-hover' : '' }}" href="{{ item.url }}" {% if item.link_type == 'external_link' %} target="_blank" {% endif %}>

				<!-- Background Image -->
				<div class="lazy__bg lazy" data-bg="{{ item.image.url }}"></div>

				<!-- Overlay Text -->
				{% if item.text %}
					<h3 class="text-with-border">
						<span>{{ item.text }}</span>
					</h3>
				{% endif %}
			</a>
		{% endfor %}
	</div>
</section>
