{#
| Variable      | Type   | Description                                                      |
|---------------|--------|------------------------------------------------------------------|
| items[]       | array  | List of 3 features                                               |
| items[].icon  | string | SallaIcons css class `sicon-*`                                   |
| items[].title | string | Title of the feature                                             |
| items[].text  | string | Subtitle for the feature                                         |
| position      | Int    | Sorting number start from zero                                   |
#}
<section class="s-block s-block--features container py-12">
	<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
		{% for item in items %}
			<div class="bg-white border border-gray-200 rounded-lg shadow-md p-6 flex flex-col items-center">
				<div class="text-blue-500 mb-4">
					<i class="{{ item.icon }} text-3xl"></i>
				</div>
				<h2 class="text-xl font-semibold mb-2">{{ item.title }}</h2>
				<p class="text-gray-600 text-center">{{ item.text }}</p>
			</div>
		{% endfor %}
	</div>
</section>
